{
  "manifest_version": 3,
  "name": "Choice Arrivals Details Transfer",
  "description": "Manual tool to run arrivals/transfer scripts only when triggered.",
  "version": "1.0.1",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "https://www.choiceadvantage.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Choice Arrivals Transfer"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/ViewArrivalsList.init*"
      ],
      "js": [
        "scripts/scrapeArrivals.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/ViewDeparturesList.init*"
      ],
      "js": [
        "scripts/scrapeDepartures.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/FindReservationWithAccountNumber.do?accountNumber=*",
        "https://www.choiceadvantage.com/choicehotels/FindReservationWithAccountNumber.do"
      ],
      "js": [
        "scripts/checkCurrentGuestInWatchlist.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/*"
      ],
      "js": [
        "scripts/injectPanel.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/*"
      ],
      "js": [
        "scripts/pageRouter.js"
      ],
      "run_at": "document_end"
    }
  ]
}