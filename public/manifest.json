{
  "manifest_version": 3,
  "name": "Advantage Additions",
  "description": "Add DNR/Watch list to Advantage.",
  "version": "1.1.0",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "https://www.choiceadvantage.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Advantage Additons"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/*"
      ],
      "js": [
        "scripts/injectPanel.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/*"
      ],
      "js": [
        "scripts/pageRouter.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/CheckInGuestRouter.do",
        "https://www.choiceadvantage.com/choicehotels/CheckInPreparation.do?*"
      ],
      "js": [
        "scripts/selectLeisureGuest.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.choiceadvantage.com/choicehotels/*"
      ],
      "js": [
        "scripts/workflows/postDeposit.js",
        "scripts/workflows/postRefund.js"
      ],
      "run_at": "document_end"
    }
  ]
}